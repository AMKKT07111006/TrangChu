﻿
<style type="text/css">
    body {
        font-size: 24px;
        background-color:antiquewhite;
    }

    header {
        background-color:mediumslateblue;
        padding: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #container{
        border: 1px solid #000000;
        border-radius: 5px
    }

    .logo img {
        height: 50px;
        width: 50px;
    }

    nav ul {
        list-style-type: none;
        display: flex;
    }

        nav ul li {
            margin-left: 20px
        }

            nav ul li a {
                text-decoration: none;
                color: #000000;
                font-weight: bold;
            }

    
</style>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="~/Content/img/delivery-truck.png" />
            </div>

            <nav>
                <ul>
                    <li><a href="#">Trang Chủ</a></li>
                    <li><a href="#">Sản Phẩm</a></li>
                    <li><a href="#">Giõ Hàng</a></li>
                    <li><a href="#">Liên Hệ</a></li>
                </ul>
            </nav>
        </header>
        <div>
            @RenderBody()
        </div>

        <footer>
            FOOTER
        </footer>
    </div>
</body>
</html>